#include <iostream>

using namespace std;

class Shape {
protected: 
		float width, height;
public: 
		void setData(float w, float h) {
			width = w;
			height = h;
		}
};

class Rectangle : public Shape {
public: 
	float area() {
		return (width * height);
	}
};

class Triangle : public Shape {
public:
	float area() {
		return (.5 * width * height);
	}
};

int main(int argc, char **argv)
{
	Rectangle rect;
	Triangle tri;
	
	float recDim[2];
	cout << "Enter the width then height of both the triangle and rectangle: ";
	for (int i = 0; i < 2; i++) {
		cin >> recDim[i];
	}
	rect.setData(recDim[0], recDim[1]);
	tri.setData(recDim[0], recDim[1]);
	cout << "Triangle area = " << tri.area() << "Rectangle area = " << rect.area();
	return 0;
}
