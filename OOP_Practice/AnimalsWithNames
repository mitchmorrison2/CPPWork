
class Animal {
protected:
	string name;
	int age;
	
public:
	void setValue(string s, int n) {
		name = s;
		age = n;
	}
};

class Zebra : public Animal {
public:
	void messageZebra() {
		cout<< "The zebra named "<< name<<" is "<< age << " years old. The zebra comes from grasslands of Southern Africa. \n";
	}
};

class Dolphin : public Animal {
public:
	void messageDolphin() {
		cout<< "The dolphin named "<< name<< " is " << age << " years old. The dolphin comes from the ocean equivalent of Los Angeles, CA. \n";
	}
};

int main() {
	Dolphin Rita;
	Zebra Zephyr;
	Rita.setValue("Rita", 43);
	Zephyr.setValue("Zephyr", 523);
	Zephyr.messageZebra();
	Rita.messageDolphin();
	return 0;
}
